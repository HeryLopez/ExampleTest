pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
             post {
                success {
                    junit '**/build/test-results/testDebugUnitTest/*'
                }
             }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }


    }
}
